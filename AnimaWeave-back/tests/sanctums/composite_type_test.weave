-- import
basic.anima
--

-- graph
nodes {
    starter basic.Start
    timer basic.GetTimestamp
    name_formatter basic.FormatNumber
    content_formatter basic.FormatNumber
    prompt_creator basic.CreatePrompt
}

datas {
    timer.timestamp -> name_formatter.number;
    timer.timestamp -> content_formatter.number;
    name_formatter.formatted -> prompt_creator.name;
    content_formatter.formatted -> prompt_creator.content;
}

controls {
    starter.signal -> timer.trigger;
    timer.done -> name_formatter.trigger;
    timer.done -> content_formatter.trigger;
    name_formatter.done -> prompt_creator.trigger;
    content_formatter.done -> prompt_creator.trigger;
}
-- 